mixin item-sos(icon, a='#')
	+e.A.item(href= a target="_blank")&attributes(attributes)
		if block
			block
		else
			+icon(icon)
//- social buttons
mixin soc()
	+b.soc
		if block
			block
		else
			+item-sos('whatsapp')(style="background: #25D366")
			+item-sos('telegram')(style="background: #139BD0;")
			+item-sos('viber')(style="background: #665CAC;")

